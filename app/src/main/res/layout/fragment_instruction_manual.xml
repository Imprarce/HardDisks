<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackForBackground"
    tools:context=".MainPages.InstructionManualFragment">

    <TextView
        android:id="@+id/instruction_main_text"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/instruction_text"
        android:textColor="@color/goodWhite"
        android:textSize="24sp"
        android:layout_marginTop="45dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ScrollView

    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginTop="80dp"
    android:fillViewport="true"
    app:layout_constraintBottom_toTopOf="@+id/bottom_menu"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/instruction_main_text">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_question"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="1. Как я могу просматривать информацию?"
            android:textColor="@color/goodWhite"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/first_answer"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Вы можете листать список дисков на главной странице (значок домика)."
            android:textColor="@color/Gray"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_question" />

        <TextView
            android:id="@+id/second_question"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="2. Как я могу сортировать диски?"
            android:textColor="@color/goodWhite"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/first_answer" />

        <TextView
            android:id="@+id/second_answer"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Вы можете сортировать диски по трем
параметрам: по рейтингу, по памяти, по цене.
Сортировка осуществляется на главной
странице (значок домика)."
            android:textColor="@color/Gray"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/second_question" />

        <TextView
            android:id="@+id/third_question"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="3. Как я сохранить жд в избранное?"
            android:textColor="@color/goodWhite"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/second_answer" />

        <TextView
            android:id="@+id/third_answer"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Вы можете сохранить жд в избранном, нажав
на значок сердечка, который находится в
нижнем правом углу на карточке описания
любого жд. Все карточки описания
расположены на главной странице (значок
домика)."
            android:textColor="@color/Gray"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/third_question" />

        <TextView
            android:id="@+id/fourth_question"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="4. Как я могу посмотреть свои избранные жд?"
            android:textColor="@color/goodWhite"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/third_answer" />

        <TextView
            android:id="@+id/fourth_answer"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Вы можете посмотреть свои избранные жд,
нажав на значок сердечка в нижнем меню."
            android:textColor="@color/Gray"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fourth_question" />

        <TextView
            android:id="@+id/fifth_question"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="5. Как я могу сравнить жд?"
            android:textColor="@color/goodWhite"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fourth_answer" />

        <TextView
            android:id="@+id/fifth_answer"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Чтобы сравнить жд вам необходимо нажать на
самый правый значок в нижнем меню. Затем
выберите два жд, которые хотите сравнить. "
            android:textColor="@color/Gray"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fifth_question" />

    </LinearLayout>

    </ScrollView>

    <GridLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:columnCount="6"
        android:background="@color/blackForBottom"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/main_menu_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/main_menu"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/user_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/user"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/about_prog_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/about_prog"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/instruction_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/intruction"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/favorite_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/favourites"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>

        <ImageView
            android:id="@+id/compare_logo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/comparison"
            android:layout_gravity="center"
            android:layout_columnWeight="1"/>



    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
